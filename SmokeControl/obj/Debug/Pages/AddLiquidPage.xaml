<Page
    x:Class="SmokeControl.Pages.AddLiquidPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmokeControl.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <DataTemplate
                x:Key="ItemTemplate">
                <Grid
                    HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="2*" />
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        IsEnabled="False"
                        Text="{Binding Liquid}"
                        Margin="5" />
                    <TextBox
                        IsEnabled="False"
                        Text="{Binding Strength}"
                        Grid.Column="1"
                        Margin="5" />
                    <TextBox
                        IsEnabled="False"
                        Text="{Binding Volume}"
                        Grid.Column="2"
                        Margin="5" />
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel>
        <StackPanel.Background>
            <ImageBrush
                Stretch="Fill"
                ImageSource="ms-appx:///Assets/bg.png" />
        </StackPanel.Background>
        <ListView
            HorizontalAlignment="Stretch"
            x:Name="AddedList"
            VerticalAlignment="Top"
            MaxHeight="500"
            ItemTemplate="{StaticResource ItemTemplate}">
            <ListView.ItemContainerStyle>
                <Style
                    TargetType="ListViewItem">
                    <Setter
                        Property="HorizontalContentAlignment"
                        Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="2*" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox
                Name="Liquids"
                Header="Taste"
                Margin="5" />
            <TextBox
                Name="Strength"
                Header="Strength"
                Grid.Column="1"
                InputScope="Number"
                Margin="5" />
            <TextBox
                Name="Volume"
                Header="Volume"
                Grid.Column="2"
                InputScope="Number"
                Margin="5" />
        </Grid>
        <HyperlinkButton x:ConnectionId='1'
            Margin="5"
            HorizontalAlignment="Left"
                                        
            FontFamily="Segoe UI Symbol"
            Content="&#xE109; Add taste to solution" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox
                Name="Count"
                Header="Count of pulls"
                Grid.Column="0"
                InputScope="Number"
                Margin="5" />
            <Button x:ConnectionId='2'
                Grid.Column="1"
                Margin="5 23 5 5"
                                               
                Content="Add Solution" />
        </Grid>
    </StackPanel>
</Page>

